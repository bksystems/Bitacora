<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.example.jurizo.bitacora.VisitGeneralFragment">

        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/visita_general_content_oficina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Oficina:" />

            <AutoCompleteTextView
                android:id="@+id/visit_general_oficinas"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textSize="13dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/visita_general_content_oficina_detalle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/visita_general_content_oficina">

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="0px"
                android:layout_gravity="center"
                android:orientation="vertical">




            </LinearLayout>

        </RelativeLayout>

</RelativeLayout>
