<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.example.jurizo.bitacora.VisitGeneralFragment">

        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/visita_general_content_oficina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Oficina:" />

            <AutoCompleteTextView
                android:id="@+id/visit_general_oficinas"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textSize="13dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/visita_general_content_oficina_detalle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:layout_below="@+id/visita_general_content_oficina">

            <RelativeLayout
                android:id="@+id/visit_general_content_offices_detail"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/visit_general_lbl_direcction"
                    android:layout_width="100dp"
                    android:text="Dirección:"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:padding="6dp"/>

                <TextView
                    android:id="@+id/visit_general_txt_direction"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:text="Vacio"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/visit_general_lbl_direcction"
                    android:layout_toEndOf="@+id/visit_general_lbl_direcction" />

                <TextView
                    android:id="@+id/visit_general_lbl_subdirecction"
                    android:layout_width="100dp"
                    android:textStyle="italic"
                    android:text="Subdirección:"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:layout_below="@+id/visit_general_lbl_direcction"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/visit_general_txt_subdirection"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:text="Vacio"
                    android:layout_alignBaseline="@+id/visit_general_lbl_subdirecction"
                    android:layout_alignBottom="@+id/visit_general_lbl_subdirecction"
                    android:layout_toRightOf="@+id/visit_general_lbl_direcction"
                    android:layout_toEndOf="@+id/visit_general_lbl_direcction" />

                <TextView
                    android:id="@+id/visit_general_lbl_region"
                    android:layout_width="100dp"
                    android:textStyle="italic"
                    android:text="Región:"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:layout_below="@+id/visit_general_lbl_subdirecction"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/visit_general_txt_region"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:text="Vacio"
                    android:layout_below="@+id/visit_general_txt_subdirection"
                    android:layout_toRightOf="@+id/visit_general_lbl_subdirecction"
                    android:layout_toEndOf="@+id/visit_general_lbl_subdirecction" />

                <TextView
                    android:id="@+id/visit_general_lbl_cc"
                    android:layout_width="35dp"
                    android:textStyle="italic"
                    android:text="CC:"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:layout_below="@+id/visit_general_lbl_region"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/visit_general_txt_cc"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:text="0000000000"
                    android:layout_alignBaseline="@+id/visit_general_lbl_cc"
                    android:layout_alignBottom="@+id/visit_general_lbl_cc"
                    android:layout_toRightOf="@+id/visit_general_lbl_cc"
                    android:layout_toEndOf="@+id/visit_general_lbl_cc" />

                <TextView
                    android:id="@+id/visit_general_lbl_office"
                    android:layout_width="60dp"
                    android:textStyle="italic"
                    android:text="Oficina:"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:layout_below="@+id/visit_general_txt_region"
                    android:layout_toRightOf="@+id/visit_general_txt_cc"
                    android:layout_toEndOf="@+id/visit_general_txt_cc" />

                <TextView
                    android:id="@+id/visit_general_txt_oficce"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:text="Vacio"
                    android:layout_below="@+id/visit_general_txt_region"
                    android:layout_toRightOf="@+id/visit_general_lbl_office"
                    android:layout_toEndOf="@+id/visit_general_lbl_office" />


                <TextView
                    android:id="@+id/visit_general_lbl_segment_pl"
                    android:layout_width="100dp"
                    android:textStyle="italic"
                    android:text="Segmento PL:"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:layout_below="@+id/visit_general_lbl_cc"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/visit_general_txt_segment_pl"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:text="Vacio"
                    android:layout_below="@+id/visit_general_txt_cc"
                    android:layout_toRightOf="@+id/visit_general_lbl_region"
                    android:layout_toEndOf="@+id/visit_general_lbl_region" />

                <TextView
                    android:id="@+id/visit_general_lbl_segment_mv"
                    android:layout_width="105dp"
                    android:textStyle="italic"
                    android:text="Segmento MV:"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:layout_below="@+id/visit_general_lbl_segment_pl"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/visit_general_txt_segment_mv"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:text="Vacio"
                    android:layout_below="@+id/visit_general_txt_segment_pl"
                    android:layout_toRightOf="@+id/visit_general_lbl_segment_pl"
                    android:layout_toEndOf="@+id/visit_general_lbl_segment_pl" />

                <TextView
                    android:id="@+id/visit_general_lbl_plantilla"
                    android:layout_width="140dp"
                    android:textStyle="italic"
                    android:text="Plantilla Autorizada:"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:paddingBottom="100dp"
                    android:layout_below="@+id/visit_general_lbl_segment_mv"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/visit_general_txt_plantilla"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:text="0"
                    android:layout_alignBaseline="@+id/visit_general_lbl_plantilla"
                    android:layout_alignBottom="@+id/visit_general_lbl_plantilla"
                    android:layout_toRightOf="@+id/visit_general_lbl_plantilla"
                    android:layout_toEndOf="@+id/visit_general_lbl_plantilla" />

                <TextView
                    android:id="@+id/visit_general_lbl_plantilla_real"
                    android:layout_width="100dp"
                    android:textStyle="italic"
                    android:text="Plantilla Real:"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:layout_alignBaseline="@+id/visit_general_txt_plantilla"
                    android:layout_alignBottom="@+id/visit_general_txt_plantilla"
                    android:layout_toRightOf="@+id/visit_general_txt_plantilla"
                    android:layout_toEndOf="@+id/visit_general_txt_plantilla" />

                <EditText
                    android:id="@+id/visit_general_txt_plantilla_real"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:text="0"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:layout_below="@+id/visit_general_txt_segment_mv"
                    android:layout_toRightOf="@+id/visit_general_lbl_plantilla_real"
                    android:layout_toEndOf="@+id/visit_general_lbl_plantilla_real" />



                <!--<com.google.android.gms.maps.MapView
                    android:id="@+id/visit_general_mapView"
                    android:paddingTop="30dp"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="20dp" />-->


            </RelativeLayout>

        </RelativeLayout>



</RelativeLayout>
