<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.example.jurizo.bitacora.VisitMovilidadFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/visita_container_questions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:id="@+id/movilidad_question_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Aquí se mencionara la primer pregunta" />

            <Spinner
                android:id="@+id/movilidad_spinner_question_one"
                android:layout_below="@+id/movilidad_question_one"
                android:layout_width="match_parent"
                android:padding="1dp"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/movilidad_question_two"
                android:layout_below="@+id/movilidad_spinner_question_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Aquí se mencionara la segunda pregunta" />

            <Spinner
                android:id="@+id/movilidad_spinner_question_two"
                android:layout_below="@+id/movilidad_question_two"
                android:layout_width="match_parent"
                android:padding="1dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/movilidad_question_three"
                android:layout_below="@+id/movilidad_spinner_question_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Aquí se mencionara la tercera pregunta" />

            <Spinner
                android:id="@+id/movilidad_spinner_question_three"
                android:layout_below="@+id/movilidad_question_three"
                android:layout_width="match_parent"
                android:padding="1dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/movilidad_question_four"
                android:layout_below="@+id/movilidad_spinner_question_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Aquí se mencionara la cuarta pregunta" />

            <Spinner
                android:id="@+id/movilidad_spinner_question_four"
                android:layout_below="@+id/movilidad_question_four"
                android:layout_width="match_parent"
                android:padding="1dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/movilidad_question_five"
                android:layout_below="@+id/movilidad_spinner_question_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Aquí se mencionara la quinta pregunta" />

            <Spinner
                android:id="@+id/movilidad_spinner_question_five"
                android:layout_below="@+id/movilidad_question_five"
                android:layout_width="match_parent"
                android:padding="1dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/movilidad_question_six"
                android:layout_below="@+id/movilidad_spinner_question_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Aquí se mencionara la sexta pregunta" />

            <Spinner
                android:id="@+id/movilidad_spinner_question_six"
                android:layout_below="@+id/movilidad_question_six"
                android:layout_width="match_parent"
                android:padding="1dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/movilidad_question_seven"
                android:layout_below="@+id/movilidad_spinner_question_six"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Aquí se mencionara la septima pregunta" />

            <Spinner
                android:id="@+id/movilidad_spinner_question_seven"
                android:layout_below="@+id/movilidad_question_seven"
                android:layout_width="match_parent"
                android:padding="1dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/movilidad_question_eight"
                android:layout_below="@+id/movilidad_spinner_question_seven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Aquí se mencionara la ocatava pregunta" />

            <Spinner
                android:id="@+id/movilidad_spinner_question_eight"
                android:layout_below="@+id/movilidad_question_eight"
                android:layout_width="match_parent"
                android:padding="1dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/movilidad_question_open"
                android:layout_below="@+id/movilidad_spinner_question_eight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notas"/>

            <EditText
                android:id="@+id/movilidad_result_open"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@id/movilidad_question_open"/>

        </RelativeLayout>


    </ScrollView>

</FrameLayout>
