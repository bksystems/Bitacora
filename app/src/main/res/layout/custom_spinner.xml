<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:paddingBottom="1dp"
    android:paddingTop="1dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:weightSum="1"
    android:background="@drawable/drawable_spinner"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/custom_spinner_nombre"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:gravity="left|center_vertical"
            android:textColor="#000"
            android:text="Apellido 1 - Apellido 2, Nombres"
            android:textSize="12dp"
            android:layout_margin="1dp"/>

        <TextView
            android:id="@+id/custom_spinner_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:text="id"
            android:visibility="invisible" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="15dp"
            android:text="Área"
            android:id="@+id/custom_spinner_area"
            android:textSize="10dp"
            android:textAlignment="textStart"
            android:textColor="#686868"
            android:gravity="left|center_vertical"
            android:layout_below="@+id/custom_spinner_nombre" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="Puesto"
            android:id="@+id/custom_spinner_puesto"
            android:textSize="10dp"
            android:textAlignment="textStart"
            android:textColor="#686868"
            android:gravity="left|center_vertical"
            android:layout_below="@+id/custom_spinner_nombre"
            android:layout_toRightOf="@+id/custom_spinner_area"
            android:layout_toEndOf="@+id/custom_spinner_area" />
</RelativeLayout>
