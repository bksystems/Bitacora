<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:padding="3dp"
    android:weightSum="1"
    android:background="@drawable/drawable_spinner"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/custom_spinner_nombre"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:gravity="left|center_vertical"
            android:textColor="#000"
            android:text="Apellido 1 - Apellido 2, Nombres"
            android:textSize="13dp"
            android:layout_margin="1dp"/>

        <TextView
            android:id="@+id/custom_spinner_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:text="id"
            android:visibility="invisible" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Puesto"
            android:layout_margin="1dp"
            android:id="@+id/custom_spinner_puesto"
            android:textSize="13dp"
            android:textAlignment="textEnd"
            android:textColor="#686868"
            android:gravity="left|center_vertical"
            android:layout_alignBottom="@+id/custom_spinner_nombre"
            android:layout_toRightOf="@+id/custom_spinner_nombre"
            android:layout_toEndOf="@+id/custom_spinner_nombre" />
</RelativeLayout>
